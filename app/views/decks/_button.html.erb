<%# buttons for adding/removing cards from deck %>
<%= button_to "0", decklists_path,
                     params: {c_id: card.id, d_id: id, val: 0},
                     remote: true,
                     class: " sm-btn qty" %>
<%= button_to "1", decklists_path,
                     params: {c_id: card.id, d_id: id, val: 1},
                     remote: true,
                     class: " sm-btn qty" %>

<%# only add last buttons if they can be legally added %>
<% unless card.card_type === "Haven" || card.card_type === "Agenda" || card.card_type === "Character" %>

<%= button_to "2", decklists_path,
                     params: {c_id: card.id, d_id: id, val: 2},
                     remote: true,
                     class: " sm-btn qty" %>
<%= button_to "3", decklists_path,
                     params: {c_id: card.id, d_id: id, val: 3},
                     remote: true,
                     class: " sm-btn qty" %>
<% end %>
