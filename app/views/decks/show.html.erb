<% provide(:title, 'Decklist') %>
<%# Set page as one row of two columns %>
<div class="row deck-main">
  <div class="col-md-5 col-sm-12 col-xs-12">

  </div>
  <div class="col-md-5 col-sm-12 col-xs-12 right">
    <%# Fix decklist to left side of screen %>
    <div class="deck-info">
      <h1><%= @deck.name %></h1>
      <% if current_user?(@deck.user) %>
        <%= render 'decks/nameForm', deck: @deck %>
      <% end %>
    </div>
    <div class="decklist">
      <%# split deck list by card type %>
      <div class="row">
        <div class="col-md-6 col-sm-6 col-xs-6">
          <%= render 'decks/cardGroup', cards: @agendas, type: "Agenda", id: "agendas", title: "Agenda" %>
        </div>
        <div class="col-md-6 col-sm-6 col-xs-6">
          <%= render 'decks/cardGroup', cards: @havens, type: "Haven", id: "havens", title: "Haven" %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 col-sm-6 col-xs-12">
          <%= render 'decks/cardGroup', cards: @characters, type: "Character", id: "characters", title: "Characters" %>
          <%= render 'decks/cardGroup', cards: @attacks, type: "Attack", id: "attack", title: "Attacks/Reactions" %>
        </div>
        <div class="col-md-6 col-sm-6 col-xs-12">
          <%= render 'decks/cardGroup', cards: @actions, type: "Action", id: "action", title: "Action" %>
        </div>
      </div>
    </div>
  </div>

  <% if current_user?(@deck.user) %>
  <div class="col-md-7 col-xs-12 decklist">
    <div class="hidden-xs">
      <%= image_tag 'rivals_bg', class: "dynamic-img" %>
    </div>
    <div class="">
      <%# Card search on right side %>
      <div class="search-bar split-form">
        <%# render search form with appropriate url path %>
        <%= form_with url: 'decks/search', method: :get, local: false do |f| %>
        <%= hidden_field_tag :d_id, @deck.id %>
        <%= render 'shared/search', :f => f%>
        <% end %>
      </div>
      <%# Card list on right side %>
      <div class="decklist">
        <%= render 'shared/card_list' %>
      </div>
    </div>
    <% end %>
  </div>
</div>
