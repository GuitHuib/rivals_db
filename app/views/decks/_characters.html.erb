<div id=<%= type %>>
  <div class="row">
    <h4><%= title %> (<span id="<%= type %>-count"><%= cards.length %></span>)</h4>
  </div>

  <!-- render leader character first -->
  <% if leader %>
    <div class="row">
      <%= render 'character',
        card: leader,
        card_count: cards.where(name: leader.name).length,
        leader: true
      %>
    </div>
  <% end %>
  <div class="card-container row">
    <!-- render all other characters -->
    <% cards.uniq.each do |card| %>
      <% unless card === leader %>
        <%= render 'character',
          card: card,
          card_count: cards.where(name: card.name).length,
          deck: @deck,
          leader: false
        %>
      <% end %>
    <% end %>
  </div>
</div>
