var element = document.querySelector("#c_<%= j @card.id %> > .count")
var count = parseInt(element.innerHTML)
var type = "<%= j @card.card_type %>"

if (count > 1){
  element.innerHTML = count - 1
}
else if (element){
  $("#c_<%= j @card.id %>").remove()
}
else {
  alert("You found an error! Let Ryan know how you broke his site!")
}
if (count > 0) {
  if (type != "Character" && type != "Agenda" && type != "Haven") {
    var counter = $("#Library-count")
    var i = parseInt(counter.innerHTML)
    counter.innerHTML = i - 1;
  }
  else {
    var counter = $("#" + type + "-count")
    var i = parseInt(counter.innerHTML)
    counter.innerHTML = i - 1;
  }
}
