var element = document.querySelector("#c_<%= j @card.id %> > .count")
var count = parseInt(element.innerHTML)
var type = "<%= j @card.card_type %>"

if (count > 1){
  element.innerHTML = count - 1
}
else if (element){
  $("#c_<%= j @card.id %>").remove()
}
else {
  alert("You found an error! Let Ryan know how you broke his site!")
}
if (count > 0) {
  if (type.includes("Action")) {
    var counter = document.querySelector("#Action-count")
    var i = parseInt(counter.innerHTML)
    counter.innerHTML = i - 1;
  }
  else if (type.includes("Attack") || type.includes("Defense")) {
    var counter = document.querySelector("#Attack-count")
    var i = parseInt(counter.innerHTML)
    counter.innerHTML = i - 1;
  }
  else {
    var counter = document.querySelector("#" + type + "-count")
    var i = parseInt(counter.innerHTML)
    counter.innerHTML = i - 1;
  }
}
