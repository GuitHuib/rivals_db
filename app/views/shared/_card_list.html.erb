<div id="card-list">
  <div class="row">
    <div class="col-md-2">
      Name
    </div>
    <div class="col-md-2">
      Faction
    </div>
    <div class="col-md-2">
      Type
    </div>
    <div class="col-md-2">
      Cost
    </div>
    <div class="col-md-2">
      Add to Deck
    </div>
  </div>
  <div class="results">
    <% @cards.each do |card| %>
      <%= render 'decks/card', id: @deck.id, card:card %>
    <% end %>
  </div>

</div>
