<div class="row">
  <div class="col-xs-12">
    <%= f.text_field :name, placeholder: " Search by card name" %>
  </div>

  <div class="col-xs-12">
    <%= f.text_field :text, placeholder: " Search within card text" %>
  </div>

  <div class="col-lg-4 col-sm-4 col-xs-4">
    <%= f.select :faction, [["Clan", nil], "Brujah", "Toreador", "Malkavian", "Ventrue", "Thin-blood", "Tremere"] %>
  </div>
  <div class="col-lg-4 col-sm-4 col-xs-4">
    <%= f.select :card_type, [["Card Type", nil], "Character", "Action", "Attack", ["Reaction", "Defense"], "City", "Agenda", "Haven"] %>
  </div>
  <div class="col-lg-4 col-sm-4 col-xs-4">
    <%= f.select :attack_type, [["Attack Type", nil], "Ranged", "Physical", "Social", "Mental"] %>
  </div>

  <div class="col-lg-4 col-sm-4 col-xs-4">
    <%= f.select :blood_requirement, [["Blood Req.", nil], 0, 1, 2, 3, 4, 5, 6] %>
  </div>
  <div class="col-lg-4 col-sm-4 col-xs-4">
    <%= f.select :disciplines, [["Discipline", nil], "Animalism", "Auspex", "Celerity", "Dominate", "Fortitude", "Obfuscate", "Potence", "Presence", "Protean", "Blood Sorcery", ["Alchemy", "Thin-blood Alchemy"]] %>
  </div>
  <div class="col-lg-4 col-sm-4 col-xs-4">
    <%= f.select :product, [["Set", nil], "Core Set", "Blood & Alchemy", "Promo"] %>
  </div>

  <div class="col-lg-3 col-sm-4 col-xs-4">
    <%= f.select :blood, [["Blood Pot.", nil], 1, 2, 3, 4, 5, 6] %>
  </div>
  <div class="col-lg-3 col-sm-4 col-xs-4">
    <%= f.select :physical, [["Physical", nil], 0, 1, 2, 3] %>
  </div>
  <div class="col-lg-3 col-sm-4 col-xs-4">
    <%= f.select :social, [["Social", nil], 0, 1, 2, 3] %>
  </div>
  <div class="col-lg-3 col-sm-4 col-xs-4">
    <%= f.select :mental, [["Mental", nil], 0, 1, 2, 3] %>
  </div>

  <div class="col-lg-3 col-sm-4 col-xs-4">
    <%= f.select :tags, [["Tags", nil], "Unhosted", "Ongoing", "Conspiracy", "Scheme", "Ritual", "Alchemy", "Title", "Guard", "Event", "Mortal", "Retainer", "Citizen"] %>
  </div>

  <div class="col-lg-3 col-sm-4 col-xs-4">
    <%= f.submit "Clear Filters", :type => "reset", class: "full-w" %>
  </div>
  <div class="col-lg-6 col-sm-8 col-xs-12">
    <%= f.submit "Filter Cards", id: "submit-search" %>
  </div>
  <div class="col-xs-12 white inner-content">
    (Click on name to see card)
  </div>

</div>
