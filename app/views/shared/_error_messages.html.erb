<% if @user.errors.any? %>
  <div id="error-explanation">
    <div class="alert danger-alert">
      Sorry, there are <%= pluralize(@user.errors.count, "error") %>.
    </div>
    <ul>
      <% @user.errors.full_messages.each do |m| %>
      <li><%= m %></li>
      <% end %>
    </ul>
  </div>
<% end %>
