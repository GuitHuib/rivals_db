<div class="row card-row text-center">

  <div class="col-lg-2 col-md-2 col-sm-2 col-xs-4 text-left">
    <%= link_to card.name, card, remote: true %>
  </div>
  <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
    <% if card.faction && card.faction != "Neutral" %>
      <%= image_tag card.faction %>
    <% else %>
      -
    <% end %>
  </div>

  <div class="col-lg-1 col-md-1 col-sm-2 col-xs-3">
    <%= card.blood %>
    <%= card.blood_requirement %>
  </div>
  <div class="col-lg-2 col-md-2 col-sm-2 hidden-xs">
    <% if card.card_type === "Character" %>
      <%= card.physical %>/
      <%= card.social %>/
      <%= card.mental %>
    <% else %>
      -
    <% end %>
  </div>
  <div class="col-lg-2 col-md-2 col-sm-2 col-xs-3">
    <% if card.card_type.include? "Attack" %>
      <%= render 'shared/renderIcon', types: card.attack_type.split(",") %>
    <% end %>

    <%# REFACTOR - why doesn't renderIcon partial render correctly here? %>
    <% if card.card_type.include? "Defense" %>
      <% if card.reaction_type.include? "Ranged" %>
        <%= image_tag 'Ranged' %>
      <% end %>
      <% if card.reaction_type.include? "Physical" %>
        <%= image_tag 'Physical' %>
      <% end %>
      <% if card.reaction_type.include? "Social" %>
        <%= image_tag 'Social' %>
      <% end %>
      <% if card.reaction_type.include? "Mental" %>
        <%= image_tag 'Mental' %>
      <% end %>
    <% end %>
  </div>
  <div class="col-lg-1 col-md-1 col-sm-2 hidden-xs">
    <%= card.damage %>
    <%= card.shield %>
  </div>

  <div class="col-lg-2 col-md-2 hidden-sm hidden-xs">
    <%= card.product %>
  </div>

</div>
<div id="card<%= card.id %>" class="card-pic"></div>
