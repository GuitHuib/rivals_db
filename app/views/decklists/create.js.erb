var element = document.querySelector("#c_<%= j @card.id %> > .count")
var type = "<%= j @card.card_type %>"

if (element) {
  num = parseInt(element.innerHTML)
  element.innerHTML = num + 1;
}
else if (type === "Agenda") {
  $("#agendas > .card-container").append("<%= escape_javascript(render 'decks/deckCard', card: @card, card_count: 1) %>")
}
else if (type === "Haven") {
  $("#havens > .card-container").append("<%= escape_javascript(render 'decks/deckCard', card: @card, card_count: 1) %>")
}
else if (type === "Character") {
  $("#characters > .card-container").append("<%= escape_javascript(render 'decks/deckCard', card: @card, card_count: 1) %>")
}
else if (type.includes("Attack") || type.includes("Defense")){
  $("#attack > .card-container").append("<%= escape_javascript(render 'decks/deckCard', card: @card, card_count: 1) %>")
}
else {
  $("#action > .card-container").append("<%= escape_javascript(render 'decks/deckCard', card: @card, card_count: 1) %>")
}

if (type.includes("Attack") || type.includes("Defense")) {
  var counter = document.querySelector("#Attack-count")
  var i = parseInt(counter.innerHTML)
  counter.innerHTML = i + 1;
}
else if (type.includes("Action")) {
  var counter = document.querySelector("#Action-count")
  var i = parseInt(counter.innerHTML)
  counter.innerHTML = i + 1;
}
else {
  var counter = document.querySelector("#" + type + "-count")
  var i = parseInt(counter.innerHTML)
  counter.innerHTML = i + 1;
}
